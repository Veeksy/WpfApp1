        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Товары" Grid.Column="0" Margin="20,169,22,196" x:Name="productsBtn" Click="productsBtn_Click" ></Button>
        <Button Content="Заказы" Grid.Column="1" Margin="20,169,22,196" x:Name="ordersBtn" Click="ordersBtn_Click"></Button>
        <Button Content="Пользователи" Grid.Column="2" Margin="20,169,22,196" x:Name="usersBtn" Click="usersBtn_Click"></Button>
    </Grid>
</Window>
