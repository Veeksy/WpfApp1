<Window x:Class="WpfApp1.windows.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.windows"
        mc:Ignorable="d"
        Title="OrdersWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="addProductsDgv">
            
        </DataGrid>
        <DockPanel Grid.Row="1">
            <Button x:Name="Back" Click="Back_Click" Margin="10" Width="50" Content="Назад" HorizontalAlignment="Left"></Button>
            <Button x:Name="Create" Click="Create_Click" Margin="10" Width="150" Content="Сделать заказ" HorizontalAlignment="Left"></Button>
        </DockPanel>
    </Grid>
</Window>
